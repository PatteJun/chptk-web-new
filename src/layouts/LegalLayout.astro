---
import Layout from './Layout.astro';
import Container from '../components/Container.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---
<Layout title={title}>
    <main class="legal-page">
        <Container>
            <h1>{title}</h1>
            <div class="content">
                <slot />
            </div>
        </Container>
    </main>
    <Footer />
</Layout>

<style>
    .legal-page {
        padding: 8rem 0 4rem;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 2rem;
    }

    .content {
        max-width: 800px;
        line-height: 1.6;
    }

    .content :global(h2) {
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
    }

    .content :global(p) {
        margin-bottom: 1rem;
    }
</style>