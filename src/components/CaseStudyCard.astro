---
interface Props {
    company: string;
    description: string;
}

const { company, description } = Astro.props;
---
<div class="case-study">
    <h3>{company}</h3>
    <p>{description}</p>
</div>

<style>
    .case-study {
        background: var(--background-color);
        padding: 2.5rem;
        border: 1px solid rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .case-study:hover {
        transform: translateY(-4px);
    }

    h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: var(--primary-color);
    }

    p {
        line-height: 1.6;
        opacity: 0.9;
    }
</style>