---
import Container from './Container.astro';
import SectionHeading from './SectionHeading.astro';
import ContactForm from './ContactForm.astro';
---
<section class="contact">
    <Container>
        <SectionHeading text="Let's Work Together" />
        <p class="subheading">Ready to bring innovation to your products?</p>
        <div class="contact-content">
            <p class="contact-info">
                Reach out to me at <a href="mailto:christoph@chptk.de">christoph@chptk.de</a> or use the form below to discuss how I can help your business grow.
            </p>
            <ContactForm />
        </div>
    </Container>
</section>

<style>
    .contact {
        padding: 6rem 0;
    }

    .subheading {
        font-size: 1.5rem;
        margin-bottom: 3rem;
        opacity: 0.8;
    }

    .contact-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .contact-info {
        text-align: center;
        margin-bottom: 3rem;
        font-size: 1.25rem;
        line-height: 1.6;
        max-width: 600px;
    }

    .contact-info a {
        color: var(--primary-color);
        text-decoration: none;
        border-bottom: 1px solid var(--primary-color);
    }

    .contact-info a:hover {
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .contact {
            padding: 4rem 0;
        }

        .subheading {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }

        .contact-info {
            font-size: 1rem;
            margin-bottom: 2rem;
        }
    }
</style>