---
import Container from './Container.astro';
import SectionHeading from './SectionHeading.astro';
import ServiceCard from './ServiceCard.astro';
---
<section class="services">
    <Container>
        <SectionHeading text="What I Can Do for You" />
        <p class="subheading">From Ideas to Impactful Products</p>
        <div class="services-grid">
            <ServiceCard 
                title="MVP Development"
                description="Transforming concepts into tangible, functional prototypes to validate ideas quickly."
            />
            <ServiceCard 
                title="Product Optimization"
                description="Analyzing and enhancing existing products for better growth and user satisfaction."
            />
        </div>
    </Container>
</section>

<style>
    .services {
        padding: 6rem 0;
    }

    .subheading {
        font-size: 1.5rem;
        margin-bottom: 3rem;
        opacity: 0.8;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    @media (max-width: 768px) {
        .services {
            padding: 4rem 0;
        }

        .subheading {
            font-size: 1.25rem;
            margin-bottom: 2rem;
        }
    }
</style>